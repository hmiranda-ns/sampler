//= depend_on_asset "root/root.html"
"use strict";
angular
  .module('sampler.root', [
    'ui.router'
  ])
  .config(function($stateProvider) {
     $stateProvider
      .state({
        name: "root",
        abstract: true,
        url: "",
        templateUrl: "<%= asset_path('root/root.html') %>",
        controller: 'sampler.root'
      });
  })
  .controller(
    'sampler.root',
    function($scope, Authentication) {
      console.log("setup root");
      $scope.user = null;
      $scope.views = [
        {
          root: 'root.login',
          title: 'Login'
        },
        {
          root: 'root.hello',
          title: 'Hello'
        },
        {
          root: 'root.task',
          state: '.index',
          title: 'Tasks'
        },
        {
          root: 'root.upload',
          title: 'Upload'
        },
        {
          root: 'root.about',
          title: 'About'
        }
      ];

      $scope.$watch(
        function() { return Authentication.getUser(); },
        function() {
          $scope.user = Authentication.getUser();
          console.log("changed: " + $scope.user);
        });
    });
