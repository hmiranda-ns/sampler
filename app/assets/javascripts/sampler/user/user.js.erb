//= depend_on_asset "user/show.html"
"use strict";
angular
  .module('sampler.user', [
    'ui.router'
  ])
  .config(function($stateProvider) {
    [
      {
        name: "root.user",
        url: "/user",
        templateUrl: "<%= asset_path('user/show.html') %>",
        controller: 'root.user'
      }
    ].forEach(function(state) {
      $stateProvider.state(state);
    });
  })
  .controller(
    'root.user',
    function(
      $scope,
      $http,
      Authentication) {
      $scope.user = {
        name: Authentication.getUser()
      };
    });
