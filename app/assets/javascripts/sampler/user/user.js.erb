//= depend_on_asset "user/show.html"
"use strict";
angular
  .module('sampler.user', [
    'ui.router'
  ])
  .config(function($stateProvider) {
   $stateProvider
      .state({
        name: "root.user",
        url: "/user",
        templateUrl: "<%= asset_path('user/show.html') %>",
        controller: 'sampler.user'
      });
  })
  .controller(
    'sampler.user',
    function(
      $scope,
      $http,
      Authentication) {
      $scope.user = {
        name: Authentication.getUser()
      };
    });
