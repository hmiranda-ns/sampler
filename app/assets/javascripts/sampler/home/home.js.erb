//= depend_on_asset "home/home.html"
"use strict";
angular
  .module('sampler.home', [
    'ngRoute',
    'sampler.hello'])
  .config(function($routeProvider) {
    console.log("config: sampler.home");
    $routeProvider
      .when("/", {
        templateUrl: "<%= asset_path('home/home.html') %>",
        controller: 'HomeController',
        redirectTo: function(current, path, search) {
          console.log(current);
          console.log(path);
          console.log(search);
          if (search.path) {
            return "/" + search.path;
          } else {
            return "/";
          }
        }
      });
  })
  .controller('HomeController', function($scope) {
    $scope.data = {
      message: 'koti'
    };
  });
