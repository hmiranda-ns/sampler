//= depend_on_asset "home/home.html"
"use strict";
angular
  .module('sampler.home', [
    'ui.router'])
  .config(function($stateProvider) {
    [
      {
        name: "root.home",
        url: "/home",
        templateUrl: "<%= asset_path('home/home.html') %>",
        controller: 'Home'
      }
    ].forEach(function(state) {
      $stateProvider.state(state);
    });
  })
  .controller(
    'Home',
    function($scope) {
      $scope.data = {
        message: 'koti'
      };
    });
